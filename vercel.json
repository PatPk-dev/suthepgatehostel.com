{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "index.html",
                    "about.html",
                    "admin.html",
                    "blog.html",
                    "blog-post.html",
                    "contact.html",
                    "rooms.html",
                    "css/**",
                    "js/**",
                    "data/**",
                    "public/**"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/server.js"
        }
    ]
}